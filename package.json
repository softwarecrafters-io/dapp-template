{
  "name": "dapp-template",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "accounts": "npx hardhat accounts",
    "code:compile": "tsc --noEmit",
    "code:format": "prettier --config .prettierrc '**/*.+(sol|ts|tsx)' --write",
    "code:lint": "prettier --config .prettierrc '**/*.+(sol|ts|tsx)' --write",
    "contracts:hint": "npx solhint 'contracts/**/*.sol'",
    "contracts:compile": "npx hardhat compile",
    "contracts:watch": "find contracts -iname '*.sol' | entr -cnr npm run contracts:compile",
    "contracts:deploy": "npx hardhat run scripts/verify.ts",
    "contracts:deploy:goerli": "hardhat run --network goerli scripts/deploy.ts",
    "contracts:verify:goerli": "hardhat run --network goerli scripts/verify.ts",
    "dependencies:check": "npx ncu",
    "dependencies:update": "npx ncu -u",
    "lint": "eslint . --ext .ts,.tsx",
    "network": "npx hardhat node",
    "test": "npm run contracts:compile && npx jest ",
    "test:watch": "npx jest --watchAll"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.4",
    "@nomiclabs/hardhat-etherscan": "^2.1.8",
    "@nomiclabs/hardhat-waffle": "^2.0.2",
    "@typechain/ethers-v5": "^7.2.0",
    "@typechain/hardhat": "^2.3.1",
    "@types/chai": "^4.3.0",
    "@types/jest": "^27.4.0",
    "@types/mocha": "^9.1.0",
    "@types/node": "^17.0.15",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "chai": "^4.3.6",
    "dotenv": "^10.0.0",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-watch": "^8.0.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.5.4",
    "hardhat": "^2.8.3",
    "hardhat-gas-reporter": "^1.0.7",
    "jest": "^27.4.7",
    "jest-environment-node-single-context": "^27.2.0",
    "mocha": "^9.2.0",
    "npm-check-updates": "^12.2.1",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.18",
    "ts-jest": "^27.1.3",
    "ts-node": "^10.4.0",
    "typechain": "^5.2.0",
    "typescript": "^4.5.5"
  }
}
